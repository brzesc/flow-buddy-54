# App Configuration
NODE_ENV=development
PORT=3001
JWT_SECRET=replace_me_with_strong_random_value_min_32_chars
JWT_REFRESH_SECRET=replace_me_with_another_strong_value_min_32_chars
CORS_ORIGIN=http://localhost:3000

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/ordermanager?schema=public

# Redis (for BullMQ)
REDIS_URL=redis://redis:6379

# Shopify Integration
SHOPIFY_SHOP=myshop.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here
SHOPIFY_API_VERSION=2024-10
SHOPIFY_API_KEY=your_api_key
SHOPIFY_API_SECRET=your_api_secret

# Email Integration (IMAP)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your_email@example.com
IMAP_PASSWORD=your_app_password_here
IMAP_TLS=true

# Email (SMTP for sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_app_password_here

# Invoice Provider (wFirma)
INVOICE_PROVIDER=wfirma
WFIRMA_COMPANY_ID=your_company_id
WFIRMA_ACCESS_KEY=your_access_key
WFIRMA_SECRET_KEY=your_secret_key
WFIRMA_BASE_URL=https://api.wfirma.pl

# Feature Flags
ENABLE_PROVIDER_MOCK=true
